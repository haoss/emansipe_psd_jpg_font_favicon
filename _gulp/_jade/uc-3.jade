doctype

html(lang="ru")
  
  -var active = 'Личный кабинет' //активный пункт меню, список в header.jade
  -var pageTitle = 'Личный кабинет - отзыв' + ' - Emansipe' //title страницы для генерации верстки 

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    include ./_include/_header
    
    // Breadcrumbs
    .breadcrumbs
      .container
        ul
          li
            a(href="#!") Emansipe
          li 
            span Личный кабинет
    
    // Content
    .content
      .container
        
        h1 личный кабинет
        
        // Discount
        .private__discount.private__discount--991
          .table
            .table-cell
              b ваша скидка 
                br
                | составляет: 
            .table-cell
              strong 15%
        
        .clear
        
        .row
          .col-sm-3
            
            // Private menu
            nav.private__menu(role="navigation")
              ul
                li
                  a(href="#!") личные данные
                li
                  a(href="#!") заказы
                li.active
                  a(href="#!") отзыв
                li
                  a(href="#!") выйти с сайта
            
          .col-sm-9
            
            .form
              form(action="#!")
                .form-group
                  textarea.form-control(placeholder="Ваше сообщение" rows="7")
                .text-right
                  button(type="submit").btn.btn--default.btn--mw200 Отправить сообщение
    
    include ./_include/_footer
    //- div(style="height: 1000px; background-color: #000")
    
    //[if gte IE 9]
      <script src='./js/libs/html5shiv/es5-shim.min.js'>
      <script src='./js/libs/html5shiv/html5shiv.min.js'>
      <script src='./js/libs/html5shiv/html5shiv-printshiv.min.js'>
      <script src='./js/libs/html5shiv/respond.min.js'><![endif]

    script(src='./js/libs.js')
    include ./_include/_footer-js
    script(src='./js/common.js')
    include ./_include/_js-body-bottom
