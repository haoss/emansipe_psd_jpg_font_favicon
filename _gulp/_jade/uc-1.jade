doctype

html(lang="ru")
  
  -var active = 'Личный кабинет' //активный пункт меню, список в header.jade
  -var pageTitle = 'Личный кабинет - личные данные' + ' - Emansipe' //title страницы для генерации верстки 

  include ./_include/_head

