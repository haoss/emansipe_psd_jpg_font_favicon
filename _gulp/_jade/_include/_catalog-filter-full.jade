          span.label Лайкра
          span.sup (250)
        label.filter__row(for="material__4")
          input(type="checkbox" name="f_material[]")#material__4
          span.checkbox
          span.label Лен
          span.sup (120)
        label.filter__row(for="material__5")
          input(type="checkbox" name="f_material[]" checked)#material__5
          span.checkbox
          span.label Полиамид
          span.sup (999)
